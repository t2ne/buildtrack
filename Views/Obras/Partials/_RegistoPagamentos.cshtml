@model BuildTrackMVC.Models.Obra

<div class="row">
    <div class="col-md-12">
        <div class="card" style="border-top: 3px solid #ff9800;">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-plus-circle"></i> Novo Registo de Pagamento
                </h3>
            </div>
            <div class="card-body">
                <form id="addPagamentoForm">
                    <input type="hidden" name="ObraId" value="@Model.Id" />
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-file-invoice-dollar" style="color: #ff9800;"></i> Tipo de Pagamento
                                </label>
                                <select name="TipoPagamento" class="form-control" required>
                                    <option value="">-- Selecione --</option>
                                    <option value="Material">Material</option>
                                    <option value="Mão de Obra">Mão de Obra</option>
                                    <option value="Equipamento">Equipamento</option>
                                    <option value="Serviços">Serviços</option>
                                    <option value="Outro">Outro</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-euro-sign" style="color: #ff9800;"></i> Valor
                                </label>
                                <input type="number" name="Valor" class="form-control" min="0.01" step="0.01"
                                    placeholder="0.00" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-calendar" style="color: #ff9800;"></i> Data
                                </label>
                                <input type="date" name="DataPagamento" class="form-control"
                                    value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-credit-card" style="color: #ff9800;"></i> Método
                                </label>
                                <select name="MetodoPagamento" class="form-control" required>
                                    <option value="">-- Selecione --</option>
                                    <option value="Dinheiro">Dinheiro</option>
                                    <option value="Transferência">Transferência</option>
                                    <option value="Multibanco">Multibanco</option>
                                    <option value="Cheque">Cheque</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-file-alt" style="color: #ff9800;"></i> Descrição
                                </label>
                                <textarea name="Descricao" class="form-control" rows="2"
                                    placeholder="Descrição do pagamento..."></textarea>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <button type="submit" class="btn btn-block d-block w-100"
                                    style="background-color: #ff9800; border-color: #ff9800; color: white;">
                                    <i class="fas fa-save"></i> Adicionar
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-list"></i> Registos de Pagamentos
                </h3>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="pagamentosTable">
                        <thead style="background-color: rgba(255, 152, 0, 0.1);">
                            <tr>
                                <th style="width: 5%;">#</th>
                                <th style="width: 15%;">Tipo</th>
                                <th style="width: 12%;">Valor</th>
                                <th style="width: 12%;">Data</th>
                                <th style="width: 12%;">Método</th>
                                <th style="width: 34%;">Descrição</th>
                                <th style="width: 10%;" class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody id="pagamentosTableBody">
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <i class="fas fa-euro-sign fa-3x mb-3" style="color: #666; opacity: 0.3;"></i>
                                    <p style="color: #aaa; margin: 0;">Nenhum pagamento registado nesta obra.</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer" style="background-color: #2a2a2a; border-top: 1px solid #444;">
                <div class="d-flex align-items-center">
                    <i class="fas fa-calculator me-2" style="color: #ff9800; font-size: 1.2rem;"></i>
                    <div>
                        <small style="color: #aaa; display: block; font-size: 0.75rem;">Total de Pagamentos</small>
                        <strong id="totalPagamentos" style="color: #fff; font-size: 1.1rem;">€ 0,00</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>