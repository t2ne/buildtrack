@model BuildTrackMVC.Models.Obra

<div class="row">
    <div class="col-md-12">
        <div class="card" style="border-top: 3px solid #2196f3;">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-plus-circle"></i> Novo Registo de Mão de Obra
                </h3>
            </div>
            <div class="card-body">
                <form id="addMaoObraForm">
                    <input type="hidden" name="ObraId" value="@Model.Id" />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-user" style="color: #2196f3;"></i> Trabalhador
                                </label>
                                <input type="text" name="NomeTrabalhador" class="form-control"
                                    placeholder="Nome do trabalhador" required />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-clock" style="color: #2196f3;"></i> Horas
                                </label>
                                <input type="number" name="HorasTrabalhadas" class="form-control" min="0.5" step="0.5"
                                    placeholder="8.0" required />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-euro-sign" style="color: #2196f3;"></i> Valor/Hora
                                </label>
                                <input type="number" name="ValorHora" class="form-control" min="0.01" step="0.01"
                                    placeholder="10.00" required />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-calendar" style="color: #2196f3;"></i> Data
                                </label>
                                <input type="date" name="DataRegisto" class="form-control"
                                    value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <button type="submit" class="btn btn-block btn-info d-block w-100">
                                    <i class="fas fa-save"></i> Adicionar
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-file-alt" style="color: #2196f3;"></i> Descrição do Trabalho
                                </label>
                                <textarea name="DescricaoTrabalho" class="form-control" rows="2"
                                    placeholder="Descreva brevemente o trabalho realizado..."></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-list"></i> Registos de Mão de Obra
                </h3>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="maoObraTable">
                        <thead style="background-color: rgba(33, 150, 243, 0.1);">
                            <tr>
                                <th style="width: 5%;">#</th>
                                <th style="width: 20%;">Trabalhador</th>
                                <th style="width: 10%;">Horas</th>
                                <th style="width: 10%;">Valor/Hora</th>
                                <th style="width: 10%;">Total</th>
                                <th style="width: 15%;">Data</th>
                                <th style="width: 20%;">Descrição</th>
                                <th style="width: 10%;" class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody id="maoObraTableBody">
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <i class="fas fa-users-cog fa-3x mb-3" style="color: #666; opacity: 0.3;"></i>
                                    <p style="color: #aaa; margin: 0;">Nenhum registo de mão de obra nesta obra.</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {
        $(document).ready(function () {
            $('#addMaoObraForm').on('submit', function (e) {
                e.preventDefault();
                alert('Funcionalidade de registar mão de obra será implementada em breve.');
            });
        });
    })();
</script>