@model BuildTrackMVC.Models.Obra

@{
    var materiais = ViewData["Materiais"] as List<BuildTrackMVC.Models.Material>;
}

<div class="row">
    <div class="col-md-12">
        <div class="card" style="border-top: 3px solid #4caf50;">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-plus-circle"></i> Adicionar Material à Obra
                </h3>
            </div>
            <div class="card-body">
                <form id="addMaterialForm">
                    <input type="hidden" name="ObraId" value="@Model.Id" />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-box" style="color: #4caf50;"></i> Material
                                </label>
                                @if (materiais != null && materiais.Any())
                                {
                                    <select name="MaterialId" class="form-control" required>
                                        <option value="">-- Selecione um material --</option>
                                        @foreach (var material in materiais)
                                        {
                                            <option value="@material.Id">@material.Nome</option>
                                        }
                                    </select>
                                }
                                else
                                {
                                    <select name="MaterialId" class="form-control" disabled>
                                        <option value="">Nenhum material disponível</option>
                                    </select>
                                    <small class="text-warning">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        É necessário criar materiais antes de registar.
                                    </small>
                                }
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-hashtag" style="color: #4caf50;"></i> Quantidade
                                </label>
                                <input type="number" name="Quantidade" class="form-control" min="0.01" step="0.01"
                                    required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>
                                    <i class="fas fa-exchange-alt" style="color: #4caf50;"></i> Operação
                                </label>
                                <select name="TipoOperacao" class="form-control" required>
                                    <option value="Entrada">Adicionar (Entrada)</option>
                                    <option value="Saída">Remover (Saída)</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <button type="submit" class="btn btn-block d-block w-100"
                                    style="background-color: #4caf50; border-color: #4caf50; color: white;">
                                    <i class="fas fa-save"></i> Adicionar
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-list"></i> Materiais Registados
                </h3>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="materiaisTable">
                        <thead style="background-color: rgba(76, 175, 80, 0.1);">
                            <tr>
                                <th style="width: 8%;">#</th>
                                <th style="width: 35%;">Material</th>
                                <th style="width: 19%;">Quantidade</th>
                                <th style="width: 19%;">Operação</th>
                                <th style="width: 19%;">Data/Hora</th>
                            </tr>
                        </thead>
                        <tbody id="materiaisTableBody">
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <i class="fas fa-boxes fa-3x mb-3" style="color: #666; opacity: 0.3;"></i>
                                    <p style="color: #aaa; margin: 0;">Nenhum material registado nesta obra.</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>