@model BuildTrackMVC.Models.Obra

@{
    ViewData["Title"] = "Eliminar Obra";
}

<style>
    .delete-card {
        background-color: #2a2a2a;
        border: 1px solid #444;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 1.5rem;
    }

    .delete-card h4 {
        color: #f44336;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #f44336;
    }

    .warning-message {
        background-color: #4a1a1a;
        border: 2px solid #f44336;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        color: #e0e0e0;
    }

    .warning-message i {
        font-size: 2rem;
        color: #f44336;
        margin-bottom: 1rem;
    }

    .detail-row {
        padding: 1rem 0;
        border-bottom: 1px solid #333;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        color: #aaa;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .breadcrumb-item.active {
        color: #aaa;
    }

    .detail-value {
        color: #e0e0e0;
        font-size: 1.1rem;
    }

    .detail-icon {
        color: #ff9800;
        margin-right: 0.75rem;
        width: 20px;
        text-align: center;
    }

    .action-buttons {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #444;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
    }

    .btn-secondary {
        background-color: #444;
        border: 1px solid #666;
        color: #ddd;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #555;
        border-color: #777;
        color: #fff;
        transform: translateY(-2px);
    }

    .breadcrumb {
        background-color: transparent;
        margin-bottom: 0;
    }

    .breadcrumb-item a {
        color: #ff9800;
        text-decoration: none;
    }

    .breadcrumb-item a:hover {
        color: #f57c00;
        text-decoration: underline;
    }

    .breadcrumb-item+.breadcrumb-item::before {
        color: #666;
    }

    .badge {
        font-size: 0.875rem;
        padding: 0.4rem 0.8rem;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-light">
                    <i class="fas fa-hard-hat me-2"></i>Eliminar Obra
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a asp-action="Index" style="color: #ff9800;">Obras</a></li>
                    <li class="breadcrumb-item active">Eliminar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="warning-message text-center">
                    <i class="fas fa-exclamation-triangle"></i>
                    <h4><strong>Atenção: Esta ação é irreversível!</strong></h4>
                    <p class="mb-0">
                        Tem a certeza que deseja eliminar esta obra? Todos os dados serão removidos permanentemente da base de dados.
                        @if (Model.Ativa)
                        {
                            <br /><strong>A obra está atualmente ativa.</strong>
                        }
                    </p>
                </div>

                <div class="delete-card">
                    <h4><i class="fas fa-hard-hat me-2"></i>Dados da Obra a Eliminar</h4>

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-hard-hat detail-icon"></i>Nome da Obra
                        </div>
                        <div class="detail-value">
                            <strong>@Model.Nome</strong>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Descricao))
                    {
                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-file-alt detail-icon"></i>Descrição
                            </div>
                            <div class="detail-value">
                                @Model.Descricao
                            </div>
                        </div>
                    }

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-user detail-icon"></i>Cliente
                        </div>
                        <div class="detail-value">
                            @Model.Cliente?.Nome
                        </div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-map-marker-alt detail-icon"></i>Morada
                        </div>
                        <div class="detail-value">
                            @Model.Morada
                        </div>
                    </div>

                    @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                    {
                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-location-arrow detail-icon"></i>Coordenadas GPS
                            </div>
                            <div class="detail-value">
                                Latitude: @Model.Latitude?.ToString("F6"), Longitude: @Model.Longitude?.ToString("F6")
                            </div>
                        </div>
                    }

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-toggle-on detail-icon"></i>Estado
                        </div>
                        <div class="detail-value">
                            @if (Model.Ativa)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle me-1"></i>Ativa
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-pause-circle me-1"></i>Inativa
                                </span>
                            }
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" id="deleteForm">
                        <input type="hidden" asp-for="Id" />
                        <div class="action-buttons">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-2"></i>Confirmar Eliminação
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>

                <div class="alert" style="background-color: #1e3a5f; border-color: #1e90ff; color: #e0e0e0;">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Nota:</strong> Se esta obra estiver associada a movimentos, registos de mão de obra ou pagamentos existentes, pode não ser possível eliminá-la.
                </div>
            </div>
        </div>
    </div>
</section>
