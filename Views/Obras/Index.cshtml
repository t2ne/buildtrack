@model IEnumerable<BuildTrackMVC.Models.Obra>

@{
    ViewData["Title"] = "Obras";
}

<style>
    .obras-header {
        background: linear-gradient(135deg, #1e1e1e 0%, #2a2a2a 100%);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #444;
    }

    .search-box {
        background-color: #1e1e1e;
        border: 1px solid #444;
        border-radius: 6px;
        padding: 0.75rem;
        color: #e0e0e0;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    .search-box:focus {
        border-color: #ff9800;
        box-shadow: 0 0 0 0.2rem rgba(255, 152, 0, 0.25);
        background-color: #2a2a2a;
        color: #fff;
    }

    .search-icon {
        color: #ff9800;
    }

    .table-card {
        background-color: #2a2a2a;
        border: 1px solid #444;
        border-radius: 8px;
        overflow: hidden;
    }

    .table-dark {
        margin-bottom: 0;
    }

    .table-dark thead th {
        background-color: #1e1e1e;
        border-bottom: 2px solid #ff9800;
        color: #ff9800;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        padding: 1rem;
    }

    .table-dark tbody tr {
        border-bottom: 1px solid #333;
        transition: background-color 0.2s;
    }

    .table-dark tbody tr:hover {
        background-color: #333;
    }

    .table-dark tbody td {
        padding: 1rem;
        vertical-align: middle;
        color: #e0e0e0;
    }

    .action-btn {
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
        border-radius: 4px;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-block;
        margin: 0 0.2rem;
    }

    .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }

    .btn-edit {
        background-color: #ff9800;
        color: white;
        border: none;
    }

    .btn-edit:hover {
        background-color: #f57c00;
        color: white;
    }

    .btn-details {
        background-color: #1e90ff;
        color: white;
        border: none;
    }

    .btn-details:hover {
        background-color: #1873cc;
        color: white;
    }

    .btn-delete {
        background-color: #f44336;
        color: white;
        border: none;
    }

    .btn-delete:hover {
        background-color: #d32f2f;
        color: white;
    }

    .badge-count {
        background-color: #ff9800;
        color: white;
        padding: 0.35rem 0.6rem;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: #888;
    }

    .empty-state i {
        font-size: 3rem;
        color: #555;
        opacity: 0.3;
        margin-bottom: 0.75rem;
    }

    .empty-state p {
        margin-bottom: 0.25rem;
    }

    .empty-state h5 {
        color: #aaa;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-light">
                    <i class="fas fa-hard-hat me-2"></i>Gestão de Obras
                </h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="obras-header">
            <div class="row align-items-center">
                <div class="col-md-6 mb-3 mb-md-0">
                    <a asp-action="Create" class="btn"
                        style="background-color: #ff9800; color: white; font-weight: 600; padding: 0.5rem 1rem; border-radius: 6px;">
                        <i class="fas fa-plus me-2"></i>Nova Obra
                    </a>
                    @if (Model != null && Model.Any())
                    {
                        <span class="badge-count ms-3">
                            <i class="fas fa-hard-hat me-1"></i><span id="obraCount">@Model.Count()</span> obras
                        </span>
                    }
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #1e1e1e; border-color: #444;">
                            <i class="fas fa-search search-icon"></i>
                        </span>
                        <input type="text" class="form-control search-box" id="searchInput"
                            placeholder="Pesquisar por nome, cliente, morada ou estado...">
                    </div>
                </div>
            </div>
        </div>

        <div class="table-card">
            <table class="table table-dark table-hover" id="obrasTable">
                <thead>
                    <tr>
                        <th style="width: 25%;"><i class="fas fa-hard-hat me-2"></i>NOME</th>
                        <th style="width: 18%;"><i class="fas fa-user me-2"></i>CLIENTE</th>
                        <th style="width: 22%;"><i class="fas fa-map-marker-alt me-2"></i>MORADA</th>
                        <th style="width: 10%;"><i class="fas fa-toggle-on me-2"></i>ESTADO</th>
                        <th style="width: 8%;"><i class="fas fa-location-arrow me-2"></i>GPS</th>
                        <th style="width: 17%;" class="text-center"><i class="fas fa-cog me-2"></i>AÇÕES</th>
                    </tr>
                </thead>
                <tbody id="obrasTableBody">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var obra in Model)
                        {
                            var searchData = $"{obra.Nome} {obra.Descricao} {obra.Cliente?.Nome} {obra.Morada} {(obra.Ativa ? "ativa" : "inativa")}".ToLower();
                            <tr data-search="@searchData">
                                <td>
                                    <div>
                                        <strong style="color: #fff;">@obra.Nome</strong>
                                        @if (!string.IsNullOrEmpty(obra.Descricao))
                                        {
                                            <br />
                                            <small style="color: #aaa;">@obra.Descricao</small>
                                        }
                                    </div>
                                </td>
                                <td>@obra.Cliente?.Nome</td>
                                <td>@obra.Morada</td>
                                <td>
                                    @if (obra.Ativa)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Ativa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-pause-circle me-1"></i>Inativa
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (obra.Latitude.HasValue && obra.Longitude.HasValue)
                                    {
                                        <span class="badge" style="background-color: #ff9800;">
                                            <i class="fas fa-map-marker-alt me-1"></i>Sim
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-map-marker-alt me-1"></i>Não
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@obra.Id" class="action-btn btn-details"
                                        title="Ver Detalhes">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@obra.Id" class="action-btn btn-edit" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@obra.Id" class="action-btn btn-delete"
                                        title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">
                                <div class="empty-state">
                                    <i class="fas fa-hard-hat"></i>
                                    <p>Nenhuma obra registada.</p>
                                    <p class="mb-0">Comece por adicionar uma nova obra.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div id="noResultsMessage" class="table-card mt-3" style="display: none;">
            <div class="empty-state">
                <i class="fas fa-search-minus"></i>
                <h5>Nenhum resultado encontrado</h5>
                <p>Tente pesquisar com outros termos.</p>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="mt-3 p-3" style="background-color: #2a2a2a; border-radius: 6px; border: 1px solid #444;">
                <small style="color: #aaa;">
                    <i class="fas fa-info-circle me-2" style="color: #ff9800;"></i>
                    Total de obras: <strong style="color: #fff;">@Model.Count()</strong>
                    | Ativas: <strong style="color: #4caf50;">@Model.Count(o => o.Ativa)</strong>
                    | Inativas: <strong style="color: #aaa;">@Model.Count(o => !o.Ativa)</strong>
                </small>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            const searchInput = $('#searchInput');
            const tableBody = $('#obrasTableBody');
            const rows = tableBody.find('tr[data-search]');
            const noResultsMsg = $('#noResultsMessage');
            const countBadge = $('#obraCount');

            searchInput.on('keyup', function () {
                const searchTerm = $(this).val().toLowerCase().trim();
                let visibleCount = 0;

                rows.each(function () {
                    const row = $(this);
                    const searchData = row.attr('data-search');

                    if (!searchData) {
                        if (searchTerm) {
                            row.hide();
                        }
                        return;
                    }

                    if (searchData.includes(searchTerm)) {
                        row.show();
                        visibleCount++;
                    } else {
                        row.hide();
                    }
                });

                countBadge.text(visibleCount);

                if (visibleCount === 0 && searchTerm) {
                    noResultsMsg.show();
                } else {
                    noResultsMsg.hide();
                }
            });

            searchInput.focus(function () {
                $(this).parent().css('box-shadow', '0 0 0 0.2rem rgba(255, 152, 0, 0.25)');
            }).blur(function () {
                $(this).parent().css('box-shadow', 'none');
            });
        });
    </script>
}