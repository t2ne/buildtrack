@model BuildTrackMVC.Models.Material

@{
    ViewData["Title"] = "Apagar Material";
}

<style>
    .delete-card {
        background-color: #2a2a2a;
        border: 1px solid #444;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 1.5rem;
    }

    .delete-card h4 {
        color: #f44336;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #f44336;
    }

    .warning-message {
        background-color: #4a1a1a;
        border: 2px solid #f44336;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        color: #e0e0e0;
    }

    .warning-message i {
        font-size: 2rem;
        color: #f44336;
        margin-bottom: 1rem;
    }

    .detail-row {
        padding: 1rem 0;
        border-bottom: 1px solid #333;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        color: #aaa;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .detail-value {
        color: #e0e0e0;
        font-size: 1.1rem;
    }

    .detail-icon {
        color: #f44336;
        margin-right: 0.75rem;
        width: 20px;
        text-align: center;
    }

    .action-buttons {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #444;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-light">
                    <i class="fas fa-box-open me-2"></i>Apagar Material
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a asp-action="Index" style="color: #4caf50;">Materiais</a></li>
                    <li class="breadcrumb-item active">Apagar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="warning-message text-center">
                    <i class="fas fa-exclamation-triangle"></i>
                    <h4><strong>Atenção: Esta ação é irreversível!</strong></h4>
                    <p class="mb-0">
                        Tem a certeza que deseja apagar este material? Todos os dados serão removidos permanentemente da
                        base de dados.
                    </p>
                </div>

                <div class="delete-card">
                    <h4><i class="fas fa-box me-2"></i>Dados do Material a Apagar</h4>

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-box detail-icon"></i>Nome do Material
                        </div>
                        <div class="detail-value">
                            <strong>@Model.Nome</strong>
                        </div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-info-circle detail-icon"></i>Descrição
                        </div>
                        <div class="detail-value">
                            @Model.Descricao
                        </div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-warehouse detail-icon"></i>Stock Disponível
                        </div>
                        <div class="detail-value">
                            @Model.StockDisponivel unidades
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" id="deleteForm">
                        <input type="hidden" asp-for="Id" />
                        <div class="action-buttons">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-2"></i>Confirmar Exclusão
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>

                <div class="alert" style="background-color: #1e3a5f; border-color: #1e90ff; color: #e0e0e0;">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Nota:</strong> Se este material estiver associado a movimentos ou obras existentes, pode não
                    ser possível apagá-lo.
                </div>
            </div>
        </div>
    </div>
</section>