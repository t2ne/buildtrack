@model IEnumerable<BuildTrackMVC.Models.Material>

@{
    ViewData["Title"] = "Materiais";
}

<style>
    .materiais-header {
        background: linear-gradient(135deg, #1e1e1e 0%, #2a2a2a 100%);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #444;
    }

    .search-box {
        background-color: #1e1e1e;
        border: 1px solid #444;
        border-radius: 6px;
        padding: 0.75rem;
        color: #e0e0e0;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    .search-box:focus {
        border-color: #4caf50;
        box-shadow: 0 0 0 0.2rem rgba(76, 175, 80, 0.25);
        background-color: #2a2a2a;
        color: #fff;
    }

    .search-icon {
        color: #4caf50;
    }

    .table-card {
        background-color: #2a2a2a;
        border: 1px solid #444;
        border-radius: 8px;
        overflow: hidden;
    }

    .table-dark {
        margin-bottom: 0;
    }

    .table-dark thead th {
        background-color: #1e1e1e;
        border-bottom: 2px solid #4caf50;
        color: #4caf50;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        padding: 1rem;
    }

    .table-dark tbody tr {
        border-bottom: 1px solid #333;
        transition: background-color 0.2s;
    }

    .table-dark tbody tr:hover {
        background-color: #333;
    }

    .table-dark tbody td {
        padding: 1rem;
        vertical-align: middle;
        color: #e0e0e0;
    }

    .action-btn {
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
        border-radius: 4px;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-block;
        margin: 0 0.2rem;
    }

    .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }

    .btn-edit {
        background-color: #ff9800;
        color: white;
        border: none;
    }

    .btn-edit:hover {
        background-color: #f57c00;
        color: white;
    }

    .btn-details {
        background-color: #1e90ff;
        color: white;
        border: none;
    }

    .btn-details:hover {
        background-color: #1873cc;
        color: white;
    }

    .btn-delete {
        background-color: #f44336;
        color: white;
        border: none;
    }

    .btn-delete:hover {
        background-color: #d32f2f;
        color: white;
    }

    .no-results {
        text-align: center;
        padding: 3rem;
        color: #aaa;
    }

    .no-results i {
        font-size: 3rem;
        color: #555;
        margin-bottom: 1rem;
    }

    .breadcrumb-item.active {
        color: #aaa;
    }

    .badge-count {
        background-color: #4caf50;
        color: white;
        padding: 0.25rem 0.6rem;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .stock-badge {
        padding: 0.25rem 0.6rem;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .stock-low {
        background-color: #f44336;
        color: white;
    }

    .stock-medium {
        background-color: #ff9800;
        color: white;
    }

    .stock-high {
        background-color: #4caf50;
        color: white;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-light">
                    <i class="fas fa-boxes-stacked me-2"></i>Gestão de Materiais
                </h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="materiais-header">
            <div class="row align-items-center">
                <div class="col-md-6 mb-3 mb-md-0">
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Novo Material
                    </a>
                    <span class="badge-count ms-3">
                        <i class="fas fa-box me-1"></i><span id="materialCount">@Model.Count()</span> materiais
                    </span>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #1e1e1e; border-color: #444;">
                            <i class="fas fa-search search-icon"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control search-box"
                            placeholder="Pesquisar por nome, descrição ou stock..." style="border-left: none;">
                    </div>
                </div>
            </div>
        </div>

        <div class="table-card">
            <div class="table-responsive">
                <table class="table table-dark table-hover" id="materiaisTable">
                    <thead>
                        <tr>
                            <th><i class="fas fa-box me-2"></i>Nome</th>
                            <th><i class="fas fa-info-circle me-2"></i>Descrição</th>
                            <th style="width: 150px;"><i class="fas fa-warehouse me-2"></i>Stock</th>
                            <th style="width: 200px; text-align: center;">
                                <i class="fas fa-cog me-2"></i>Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody id="materiaisTableBody">
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                var stockClass = item.StockDisponivel == 0 ? "stock-low" :
                                item.StockDisponivel < 10 ? "stock-medium" : "stock-high";

                                <tr data-search="@item.Nome.ToLower() @item.Descricao.ToLower() @item.StockDisponivel">
                                    <td><strong>@item.Nome</strong></td>
                                    <td>@item.Descricao</td>
                                    <td>
                                        <span class="stock-badge @stockClass">
                                            @item.StockDisponivel
                                        </span>
                                    </td>
                                    <td style="text-align: center; white-space: nowrap;">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="action-btn btn-details"
                                            title="Ver detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn btn-edit" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn btn-delete"
                                            title="Apagar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="no-results">
                                    <i class="fas fa-boxes-stacked"></i>
                                    <h5>Nenhum material encontrado</h5>
                                    <p>Comece por adicionar um novo material.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div id="noResultsMessage" class="table-card mt-3" style="display: none;">
            <div class="no-results">
                <i class="fas fa-search-minus"></i>
                <h5>Nenhum resultado encontrado</h5>
                <p>Tente pesquisar com outros termos.</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            const searchInput = $('#searchInput');
            const tableBody = $('#materiaisTableBody');
            const rows = tableBody.find('tr');
            const noResultsMsg = $('#noResultsMessage');
            const countBadge = $('#materialCount');

            searchInput.on('keyup', function () {
                const searchTerm = $(this).val().toLowerCase().trim();
                let visibleCount = 0;

                rows.each(function () {
                    const row = $(this);
                    const searchData = row.attr('data-search');

                    if (!searchData) {
                        if (searchTerm) {
                            row.hide();
                        }
                        return;
                    }

                    if (searchData.includes(searchTerm)) {
                        row.show();
                        visibleCount++;
                    } else {
                        row.hide();
                    }
                });

                countBadge.text(visibleCount);

                if (visibleCount === 0 && searchTerm) {
                    noResultsMsg.show();
                } else {
                    noResultsMsg.hide();
                }
            });

            searchInput.focus(function () {
                $(this).parent().css('box-shadow', '0 0 0 0.2rem rgba(76, 175, 80, 0.25)');
            }).blur(function () {
                $(this).parent().css('box-shadow', 'none');
            });
        });
    </script>
}