@model BuildTrackMVC.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<style>
    .form-card {
        background-color: #2a2a2a;
        border: 1px solid #444;
        border-radius: 8px;
        padding: 2rem;
        margin-bottom: 1.5rem;
    }

    .form-card h4 {
        color: #ff9800;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #ff9800;
    }

    .form-label {
        color: #e0e0e0;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control {
        background-color: #1e1e1e;
        border: 1px solid #444;
        color: #e0e0e0;
        border-radius: 6px;
        padding: 0.75rem;
    }

    .form-control:focus {
        background-color: #2a2a2a;
        border-color: #ff9800;
        color: #fff;
        box-shadow: 0 0 0 0.2rem rgba(255, 152, 0, 0.25);
    }

    .form-control.is-invalid {
        border-color: #f44336;
    }

    .form-control.is-valid {
        border-color: #4caf50;
    }

    .invalid-feedback,
    .text-danger {
        color: #f44336 !important;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .valid-feedback {
        color: #4caf50 !important;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .form-text {
        color: #aaa;
        font-size: 0.875rem;
    }

    .btn-group-actions {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #444;
    }

    .required-badge {
        color: #f44336;
        font-size: 0.75rem;
        vertical-align: super;
    }

    .input-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
        pointer-events: none;
    }

    .input-wrapper {
        position: relative;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-light">
                    <i class="fas fa-user-edit me-2"></i>Editar Cliente
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a asp-action="Index" style="color: #1e90ff;">Clientes</a></li>
                    <li class="breadcrumb-item active">Editar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="form-card">
                    <h4><i class="fas fa-edit me-2"></i>Atualizar Dados do Cliente</h4>

                    <form asp-action="Edit" method="post" id="clienteForm" novalidate>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">
                                Nome <span class="required-badge">*</span>
                            </label>
                            <div class="input-wrapper">
                                <input asp-for="Nome" class="form-control" placeholder="Introduza o nome completo" />
                                <i class="fas fa-user input-icon"></i>
                            </div>
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NIF" class="form-label">
                                    NIF <span class="required-badge">*</span>
                                </label>
                                <div class="input-wrapper">
                                    <input asp-for="NIF" class="form-control" placeholder="000000000" maxlength="9" />
                                    <i class="fas fa-id-card input-icon"></i>
                                </div>
                                <span asp-validation-for="NIF" class="text-danger"></span>
                                <small class="form-text">Deve conter exatamente 9 dígitos</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefone" class="form-label">
                                    Telefone <span class="required-badge">*</span>
                                </label>
                                <div class="input-wrapper">
                                    <input asp-for="Telefone" class="form-control" placeholder="000000000"
                                        maxlength="9" />
                                    <i class="fas fa-phone input-icon"></i>
                                </div>
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                                <small class="form-text">Deve conter exatamente 9 dígitos</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                Email <span class="required-badge">*</span>
                            </label>
                            <div class="input-wrapper">
                                <input asp-for="Email" class="form-control" type="text"
                                    placeholder="exemplo@email.com" />
                                <i class="fas fa-envelope input-icon"></i>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Morada" class="form-label">
                                Morada <span class="required-badge">*</span>
                            </label>
                            <div class="input-wrapper">
                                <input asp-for="Morada" class="form-control"
                                    placeholder="Rua, número, código postal, localidade" />
                                <i class="fas fa-map-marker-alt input-icon"></i>
                            </div>
                            <span asp-validation-for="Morada" class="text-danger"></span>
                        </div>

                        <div class="btn-group-actions">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Guardar Alterações
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>

                <div class="alert" style="background-color: #4a3a1a; border-color: #ff9800; color: #e0e0e0;">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Atenção:</strong> As alterações serão guardadas permanentemente na base de dados.
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            // Real-time validation feedback
            const form = $('#clienteForm');
            const inputs = form.find('input[type="text"]');

            inputs.on('blur', function () {
                const input = $(this);

                // Trigger validation
                $.validator.unobtrusive.parseElement(input);

                if (input.valid()) {
                    input.removeClass('is-invalid').addClass('is-valid');
                } else {
                    input.removeClass('is-valid').addClass('is-invalid');
                }
            });

            inputs.on('input', function () {
                const input = $(this);
                if (input.hasClass('is-invalid') || input.hasClass('is-valid')) {
                    if (input.valid()) {
                        input.removeClass('is-invalid').addClass('is-valid');
                    } else {
                        input.removeClass('is-valid').addClass('is-invalid');
                    }
                }
            });

            // Form submission
            form.submit(function (e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    e.stopPropagation();

                    // Add invalid class to fields with errors
                    $(this).find('.input-validation-error').each(function () {
                        $(this).removeClass('is-valid').addClass('is-invalid');
                    });

                    // Scroll to first error
                    const firstError = $(this).find('.is-invalid').first();
                    if (firstError.length) {
                        $('html, body').animate({
                            scrollTop: firstError.offset().top - 100
                        }, 300);
                        firstError.focus();
                    }

                    return false;
                }
            });

            // NIF and Telefone - only allow numbers
            $('input[name="NIF"], input[name="Telefone"]').on('keypress', function (e) {
                if (!/^\d$/.test(String.fromCharCode(e.which))) {
                    e.preventDefault();
                }
            });
        });
    </script>
}