<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BuildTrack</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- AdminLTE core -->
    <link rel="stylesheet" href="~/css/adminlte.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuildTrackMVC.styles.css" asp-append-version="true" />
</head>

<body class="layout-fixed layout-navbar-fixed sidebar-mini sidebar-collapse @(User.Identity?.IsAuthenticated != true ? "no-sidebar" : "")">
    <div class="app-wrapper">
        <nav class="app-header navbar navbar-expand navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" asp-area="" asp-controller="Home"
                                asp-action="Index">Início</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" asp-area="" asp-controller="Home"
                                asp-action="Manual">Manual</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end"
                                    style="background-color: #2a2a2a; border: 1px solid #444;">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-light"
                                                style="background-color: transparent;">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        @if (User.Identity?.IsAuthenticated == true)
        {
            <aside class="app-sidebar bg-secondary text-light shadow">
                <div class="sidebar-brand">
                    <a class="brand-link text-primary fw-bold text-decoration-none" asp-area="" asp-controller="Home"
                        asp-action="Index">
                        <i class="fa-solid fa-cubes brand-image"></i>
                        <span class="brand-text">BuildTrackMVC</span>
                    </a>
                </div>
                <div class="sidebar">
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column sidebar-menu" data-widget="treeview" role="menu"
                            data-accordion="false">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Clientes" asp-action="Index" class="nav-link text-light">
                                    <i class="nav-icon fa-solid fa-user"></i>
                                    <p>Clientes</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Materiais" asp-action="Index" class="nav-link text-light">
                                    <i class="nav-icon fa-solid fa-boxes-stacked"></i>
                                    <p>Materiais</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Obras" asp-action="Index" class="nav-link text-light">
                                    <i class="nav-icon fa-solid fa-building"></i>
                                    <p>Obras</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Movimentos" asp-action="Index" class="nav-link text-light">
                                    <i class="nav-icon fa-solid fa-exchange-alt"></i>
                                    <p>Movimentos</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="RegistosMaoObra" asp-action="Index"
                                    class="nav-link text-light">
                                    <i class="nav-icon fa-solid fa-person-digging"></i>
                                    <p>Mão de Obra</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="RegistosPagamentos" asp-action="Index"
                                    class="nav-link text-light">
                                    <i class="nav-icon fa-solid fa-money-bill-transfer"></i>
                                    <p>Pagamentos</p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </aside>
        }

        <!-- Main Content -->
        <main class="app-main">
            <div class="app-content p-4">
                @RenderBody()
            </div>
        </main>

        <!-- Footer -->
        <footer class="app-footer text-center border-top border-secondary py-3 small text-muted text-light">
            &copy; 2025 - t2ne
        </footer>
    </div>

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Sidebar State Persistence -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const body = document.body;
            const sidebarState = localStorage.getItem('sidebar-state');

            // Apply saved state on page load
            if (sidebarState === 'collapsed') {
                body.classList.add('sidebar-collapse');
            } else if (sidebarState === 'expanded') {
                body.classList.remove('sidebar-collapse');
            }

            // Listen for sidebar toggle events
            const sidebarToggle = document.querySelector('[data-lte-toggle="sidebar"]');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function () {
                    // Wait for AdminLTE to toggle the class
                    setTimeout(function () {
                        if (body.classList.contains('sidebar-collapse')) {
                            localStorage.setItem('sidebar-state', 'collapsed');
                        } else {
                            localStorage.setItem('sidebar-state', 'expanded');
                        }
                    }, 50);
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>