<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BuildTrack</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- AdminLTE core -->
    <link rel="stylesheet" href="~/css/adminlte.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuildTrackMVC.styles.css" asp-append-version="true" />
</head>

<body class="layout-fixed bg-dark text-light sidebar-preload">
    <div class="app-wrapper">
        <nav class="app-header navbar navbar-expand navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button">
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                asp-action="Index">Início</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                asp-action="Manual">Manual</a>
                        </li>
                    </ul>
                    <aside class="app-sidebar bg-secondary text-light shadow">
                </div>
            </div>
        </nav>

        <aside
            class="layout-fixed app-sidebar bg-secondary text-light shadow sidebar-mini sidebar-collapse sidebar-expand-lg">
            <div class="sidebar-brand d-flex align-items-center p-3 border-bottom border-secondary">
                <a class="text-primary fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-cubes me-2"></i>BuildTrackMVC
                </a>
            </div>
            <nav class="mt-3">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Clientes" asp-action="Index" class="nav-link text-light">
                            <i class="nav-icon fa-solid fa-user"></i> Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Materiais" asp-action="Index" class="nav-link text-light">
                            <i class="nav-icon fa-solid fa-boxes-stacked"></i> Materiais
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Obras" asp-action="Index" class="nav-link text-light">
                            <i class="nav-icon fa-solid fa-building"></i> Obras
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Movimentos" asp-action="Index" class="nav-link text-light">
                            <i class="nav-icon fa-solid fa-exchange-alt"></i> Movimentos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="RegistosMaoObra" asp-action="Index" class="nav-link text-light">
                            <i class="nav-icon fa-solid fa-person-digging"></i> Mão de Obra
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="RegistosPagamentos" asp-action="Index"
                            class="nav-link text-light">
                            <i class="nav-icon fa-solid fa-money-bill-transfer"></i> Pagamentos
                        </a>
                    </li>
                </ul>

            </nav>
        </aside>

        <!-- Main Content -->
        <main class="app-main">
            <div class="app-content p-4">
                @RenderBody()
            </div>
        </main>

        <!-- Footer -->
        <footer class="app-footer text-center border-top border-secondary py-3 small text-muted text-light">
            &copy; 2025 - t2ne
        </footer>
    </div>

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>