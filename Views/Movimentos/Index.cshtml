@model IEnumerable<BuildTrackMVC.Models.Movimento>

@{
    ViewData["Title"] = "Movimentos de Stock";
}

<style>
    .movimentos-header {
        background: linear-gradient(135deg, #1e1e1e 0%, #2a2a2a 100%);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #444;
    }

    .search-box {
        background-color: #1e1e1e;
        border: 1px solid #444;
        border-radius: 6px;
        padding: 0.75rem;
        color: #e0e0e0;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    .search-box:focus {
        border-color: #1e90ff;
        box-shadow: 0 0 0 0.2rem rgba(30, 144, 255, 0.25);
        background-color: #2a2a2a;
        color: #fff;
    }

    .search-icon {
        color: #1e90ff;
    }

    .table-card {
        background-color: #2a2a2a;
        border: 1px solid #444;
        border-radius: 8px;
        overflow: hidden;
    }

    .table-dark {
        margin-bottom: 0;
    }

    .table-dark thead th {
        background-color: #1e1e1e;
        border-bottom: 2px solid #1e90ff;
        color: #1e90ff;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        padding: 1rem;
    }

    .table-dark tbody tr {
        border-bottom: 1px solid #333;
        transition: background-color 0.2s;
    }

    .table-dark tbody tr:hover {
        background-color: #333;
    }

    .table-dark tbody td {
        padding: 1rem;
        vertical-align: middle;
        color: #e0e0e0;
    }

    .no-results {
        text-align: center;
        padding: 3rem;
        color: #aaa;
    }

    .no-results i {
        font-size: 3rem;
        color: #555;
        margin-bottom: 1rem;
    }

    .badge-count {
        background-color: #1e90ff;
        color: white;
        padding: 0.25rem 0.6rem;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .operation-badge {
        padding: 0.25rem 0.6rem;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .operation-add {
        background-color: #4caf50;
        color: white;
    }

    .operation-remove {
        background-color: #f44336;
        color: white;
    }

    .info-card {
        background-color: #1e3a5f;
        border: 1px solid #1e90ff;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: #e0e0e0;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-light">
                    <i class="fas fa-exchange-alt me-2"></i>Movimentos de Stock
                </h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="info-card">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Informação:</strong> Esta é uma listagem apenas de leitura. Os movimentos são criados
            automaticamente quando adiciona materiais às obras.
        </div>

        <div class="movimentos-header">
            <div class="row align-items-center">
                <div class="col-md-6 mb-3 mb-md-0">
                    <span class="badge-count">
                        <i class="fas fa-history me-1"></i><span id="movimentoCount">@Model.Count()</span> movimentos
                    </span>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #1e1e1e; border-color: #444;">
                            <i class="fas fa-search search-icon"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control search-box"
                            placeholder="Pesquisar por obra, cliente, material ou operação..."
                            style="border-left: none;">
                    </div>
                </div>
            </div>
        </div>

        <div class="table-card">
            <div class="table-responsive">
                <table class="table table-dark table-hover" id="movimentosTable">
                    <thead>
                        <tr>
                            <th><i class="fas fa-building me-2"></i>Obra</th>
                            <th><i class="fas fa-user me-2"></i>Cliente</th>
                            <th><i class="fas fa-box me-2"></i>Material</th>
                            <th><i class="fas fa-toggle-on me-2"></i>Operação</th>
                            <th><i class="fas fa-calculator me-2"></i>Quantidade</th>
                            <th><i class="fas fa-clock me-2"></i>Data/Hora</th>
                        </tr>
                    </thead>
                    <tbody id="movimentosTableBody">
                        @if (Model.Any())
                        {
                            @foreach (var item in Model.OrderByDescending(m => m.DataHora))
                            {
                                var operationClass = item.Operacao == "ADD" ? "operation-add" : "operation-remove";
                                var operationText = item.Operacao == "ADD" ? "Entrada" : "Saída";
                                var operationIcon = item.Operacao == "ADD" ? "fa-plus" : "fa-minus";

                                <tr
                                    data-search="@item.Obra.Nome.ToLower() @item.Obra.Cliente.Nome.ToLower() @item.Material.Nome.ToLower() @operationText.ToLower()">
                                    <td><strong>@item.Obra.Nome</strong></td>
                                    <td>@item.Obra.Cliente.Nome</td>
                                    <td>@item.Material.Nome</td>
                                    <td>
                                        <span class="operation-badge @operationClass">
                                            <i class="fas @operationIcon me-1"></i>@operationText
                                        </span>
                                    </td>
                                    <td><strong>@item.Quantidade</strong></td>
                                    <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="no-results">
                                    <i class="fas fa-exchange-alt"></i>
                                    <h5>Nenhum movimento registado</h5>
                                    <p>Os movimentos aparecerão quando adicionar materiais às obras.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div id="noResultsMessage" class="table-card mt-3" style="display: none;">
            <div class="no-results">
                <i class="fas fa-search-minus"></i>
                <h5>Nenhum resultado encontrado</h5>
                <p>Tente pesquisar com outros termos.</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            const searchInput = $('#searchInput');
            const tableBody = $('#movimentosTableBody');
            const rows = tableBody.find('tr');
            const noResultsMsg = $('#noResultsMessage');
            const countBadge = $('#movimentoCount');

            searchInput.on('keyup', function () {
                const searchTerm = $(this).val().toLowerCase().trim();
                let visibleCount = 0;

                rows.each(function () {
                    const row = $(this);
                    const searchData = row.attr('data-search');

                    if (!searchData) {
                        if (searchTerm) {
                            row.hide();
                        }
                        return;
                    }

                    if (searchData.includes(searchTerm)) {
                        row.show();
                        visibleCount++;
                    } else {
                        row.hide();
                    }
                });

                countBadge.text(visibleCount);

                if (visibleCount === 0 && searchTerm) {
                    noResultsMsg.show();
                } else {
                    noResultsMsg.hide();
                }
            });

            searchInput.focus(function () {
                $(this).parent().css('box-shadow', '0 0 0 0.2rem rgba(30, 144, 255, 0.25)');
            }).blur(function () {
                $(this).parent().css('box-shadow', 'none');
            });
        });
    </script>
}